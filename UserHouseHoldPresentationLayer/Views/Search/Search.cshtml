
@{
    ViewBag.Title = "Search";
}

<h3> User Search</h3>
<hr />
<h5>Use any combination of fields below to search through all Customers</h5>
<br />
<form action="/Search/Searchdata" method="post">
    <div class="row">
        <div class="form-group">
            <div class="col-md-2">
                <input type="text" name='firstname' class="form-control" placeholder="FirstName">
            </div>

            <div class="col-md-2">
                <input type="text" name='lastname' class="form-control" placeholder="LastName">
            </div>
        </div>
    </div>
    <br />
    <div class="row">
        <div class="form-group">
            <div class="col-md-2">
                <input type="text" name='dob' class="form-control" placeholder="DOB">
            </div>
        </div>
    </div>
    <br />
    <div class="row">
        <div class="form-group">
            <div class="col-md-3">
                <input type="text" name='appid' class="form-control" placeholder="Application Id">
            </div>


            <div class="col-md-2">
                <select class="form-control" id="Status" name='status'>
                    <option> Application Status</option>
                    <option> Approved</option>
                    <option> Pending</option>

                </select>
            </div>
        </div>
    </div>
    <br />
    <div>
        <input type="submit" value="Search" class="btn btn-success" />
    </div>
    @*onclick="location.href='@Url.Action("Searchdata", "Search")'"*@
</form>
